generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
  addresses Address[]
}

model Product {
  id          String      @id @default(uuid())
  name        String
  description String?
  price       Float
  stock       Int
  images      String[]
  // Dimensions
  height      Float?
  width       Float?
  length      Float?
  // Rich Text Description
  longDescription String? // @db.Text is implied for String in Prisma unless specified otherwise, but for Postgres String is text.
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  slug        String?     @unique
  variants    Variant[]
  orderItems  OrderItem[]
  categoryId  String?
  category    Category?   @relation(fields: [categoryId], references: [id])
  collections Collection[]
  discountPrice Float?
  discounts   Discount[]
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

model Discount {
  id          String       @id @default(uuid())
  name        String
  code        String?      @unique // Null for campaigns, present for coupons
  type        DiscountType
  value       Float
  startDate   DateTime
  endDate     DateTime
  isActive    Boolean      @default(true)
  usageLimit  Int?         // Max uses for coupons
  usedCount   Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  products    Product[]
  collections Collection[]
}



model Collection {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  image       String?
  isActive    Boolean   @default(true)
  slug        String    @unique
  products    Product[]
  discounts   Discount[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Variant {
  id        String      @id @default(uuid())
  productId String
  product   Product     @relation(fields: [productId], references: [id])
  name      String
  stock     Int
  price     Float?
  images    String[]
  sku       String      @unique
  orderItems OrderItem[]
}

model Order {
  id        String      @id @default(uuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id])
  status    OrderStatus @default(PENDING)
  total     Float
  paymentId String?     @unique
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  shippingAddress Json?
  items     OrderItem[]
}

model OrderItem {
  id        String    @id @default(uuid())
  productId String
  orderId   String
  variantId String?
  quantity  Int
  price     Float
  product   Product   @relation(fields: [productId], references: [id])
  variant   Variant?  @relation(fields: [variantId], references: [id])
  order     Order     @relation(fields: [orderId], references: [id])
}

model Address {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  street    String
  city      String
  state     String
  zip       String
  country   String
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  slug        String?   @unique
  description String?
  image       String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model ShippingRate {
  id        String   @id @default(uuid())
  country   String
  state     String?
  city      String?
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([country, state, city]) // Ensure no duplicate rules for the same location combo
}
